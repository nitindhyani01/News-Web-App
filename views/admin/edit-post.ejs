<div class="flex justify-between items-center mt-6">
    <a href="/dashboard" class="text-blue-500 hover:text-blue-700 transition duration-200 p-12 pt-12">&larr; Back</a>
  <h2 class="text-3xl font-bold text-gray-800">View / Edit Post</h2>

  <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
    <input type="submit" value="Delete" class="bg-red-500 text-white font-semibold py-2 px-4 rounded hover:bg-red-600 transition duration-200 cursor-pointer">
  </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" class="bg-white p-8 rounded shadow-md space-y-6">

  <div>
    <label for="title" class="block text-lg font-medium text-gray-700 mb-2">Title</label>
    <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
  </div>

  <div>
    <label for="body" class="block text-lg font-medium text-gray-700 mb-2">Content</label>
    <textarea name="body" cols="50" rows="10" class="w-full p-3 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"><%= data.body %></textarea>
  </div>

  <div class="flex justify-end">
    <input type="submit" value="Update" class="bg-green-500 text-white font-semibold py-2 px-4 rounded hover:bg-green-600 transition duration-200 cursor-pointer">
  </div>
</form>
