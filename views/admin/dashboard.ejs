<div class="min-h-screen bg-gray-100 p-10 pt-14">
    <div class="max-w-6xl mx-auto bg-white rounded-lg shadow-md p-6">
      <div class="mb-6 flex justify-between items-center">
        <h2 class="text-3xl font-bold text-blue-600">Posts</h2>
        <a href="/add-post" class="bg-green-500 text-white py-2 px-4 rounded hover:bg-green-600 transition duration-200">+ Add New</a>
      </div>
      <ul class="space-y-4">
        <% data.forEach(post => { %>
          <li class="flex justify-between items-center p-4 border-b border-gray-200">
            <a href="/post/<%= post._id %>" class="text-lg font-medium text-blue-600 hover:underline">
              <%= post.title %> &nearr;
            </a>
            <div class="flex space-x-4">
              <a href="/edit-post/<%= post._id %>" class="bg-yellow-500 text-white py-1 px-3 rounded hover:bg-yellow-600 transition duration-200">Edit</a>
              <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="bg-red-500 text-white py-1 px-3 rounded hover:bg-red-600 transition duration-200">
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
  